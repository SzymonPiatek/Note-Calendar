generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String   @unique
  createdAt   DateTime @default(now())
  isActive    Boolean  @default(true)
  isSuperuser Boolean  @default(false)
  password    String
  updatedAt   DateTime @updatedAt
}
